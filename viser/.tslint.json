{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules"
  ],
  "defaultSeverity": "error",
  "rules": {
    "prefer-conditional-expression": [
      false
    ],
    "semicolon": [
      true
    ],
    "object-literal-sort-keys": false,
    "max-classes-per-file": [
      5
    ],
    "no-string-literal": false,
    "max-line-length": [
      150
    ],
    "arrow-parens": false,
    "indent": [
      2
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "member-access": [
      false
    ],
    "only-arrow-functions": [
      false
    ],
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "no-var-keyword": true,
    "no-multi-spaces": 2,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "prefer-const": true,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "ter-prefer-arrow-callback": [
      true
    ],
    "ordered-imports": false,
    "object-literal-shorthand": true,
    "ter-arrow-body-style": [
      false
    ],
    "ter-max-len": [
      true,
      {
        "code": 200,
        "tabWidth": 2,
        "ignoreImports": true,
        "ignoreUrls": true,
        "ignorePattern": "^\\s*(let|const)\\s.+=\\s*require\\s*\\("
      }
    ],
    "switch-default": true,
    "no-console": [
      true,
      "log",
      "error"
    ],
    "eofline": true,
    "no-var-requires": false
  }
}
