{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./index.ts"
  ],
  "exclude": ["node_modules", "build"]
}
