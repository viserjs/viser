{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "declaration": false,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["index.ts"],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}