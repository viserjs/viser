{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "es",
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": false,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "es",
    "skipTemplateCodegen": true,
    "debug": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
