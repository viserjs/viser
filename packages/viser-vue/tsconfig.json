{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "Node",
    "outDir": "es",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es6", "scripthost", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
