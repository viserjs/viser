{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "es",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es6",
      "scripthost",
      "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
